{
  "name": "ntm",
  "displayName": "NTM",
  "description": "NTM Programming Language",
  "publisher": "valentin-vignal",
  "repository": {
    "type": "git",
    "url": "https://github.com/Novade/ntm-vscode.git"
  },
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ntm",
        "aliases": [
          "NTM",
          "ntm"
        ],
        "extensions": [
          ".ntm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ntm",
        "scopeName": "source.ntm",
        "path": "./syntaxes/ntm.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.dart",
          "source.txt",
          "source.graphql"
        ],
        "scopeName": "source.dart.ntm",
        "path": "./syntaxes/ntm.dart.json",
        "embeddedLanguages": {
          "meta.embedded.block.ntm": "ntm"
        }
      }
    ]
  },
  "scripts": {
    "test-language": "vscode-tmgrammar-snap src/test/language/**"
  },
  "devDependencies": {
    "vscode-tmgrammar-test": "^0.1.1"
  }
}
